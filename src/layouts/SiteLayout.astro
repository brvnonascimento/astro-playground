---
import "@fontsource/raleway";

const { fontScale = "blog" } = Astro.props;

const fontScales = {
  marketing: "marketing-font-scale",
  blog: "blog-font-scale",
} as const;

type Props = {
  fontScale?: keyof typeof fontScales;
};

const fontScaleClass = fontScales[fontScale];
---

<style is:global>
  :root {
    --color-primary: #8b00ff;
    --color-primary-dark: #2b0547;

    --color-background: var(--color-primary-dark);

    --color-text: #fff;
  }

  .marketing-font-scale {
    --font-family-heading: "Raleway", sans-serif;
    --font-family-body: "Raleway", sans-serif;

    --font-size-h1: 11.089rem;
    --font-size-h2: 6.854rem;
    --font-size-h3: 4.236rem;
    --font-size-h4: 2.618rem;
    --font-size-h5: 1.618rem;

    --font-size-body-normal: 1rem;
    --font-size-body-small: 0.618rem;
    --font-size-body-extra-small: 0.236rem;

    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semi-bold: 600;
    --font-weight-bold: 700;

    --line-height-body: 1.75;
    --line-height-heading: 1.3;
  }

  .blog-font-scale {
    --font-family-heading: "Raleway", sans-serif;
    --font-family-body: "Raleway", sans-serif;

    --font-size-h1: 3.052rem;
    --font-size-h2: 2.441rem;
    --font-size-h3: 1.953rem;
    --font-size-h4: 1.563rem;
    --font-size-h5: 1.25rem;

    --font-size-body-normal: 1rem;
    --font-size-body-small: 0.8rem;
    --font-size-body-extra-small: 0.512rem;

    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semi-bold: 600;
    --font-weight-bold: 700;

    --line-height-body: 1.75;
    --line-height-heading: 1.33;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-size: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: var(--font-family-body);
    background: var(--color-background);
    color: var(--color-text);
    line-height: var(--line-height-body);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: var(--line-height-heading);
    font-family: var(--font-family-heading);
    font-weight: var(--font-weight-semi-bold);
  }

  h1 {
    font-size: var(--font-size-h1);
    margin-top: 0;
  }

  h2 {
    font-size: var(--font-size-h2);
  }

  h3 {
    font-size: var(--font-size-h3);
  }

  h4 {
    font-size: var(--font-size-h4);
  }

  h5 {
    font-size: var(--font-size-h5);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    max-width: 70ch;
  }

  p {
    margin-bottom: 1rem;
  }

  p,
  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
  }

  main {
    display: grid;
    grid-template-columns: 1fr min(95%, 1200px) 1fr;
    container-type: inline-size;
  }

  main > * {
    grid-column: 2;
  }
</style>

<style>
  header {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 1;
  }

  nav {
    display: flex;
    padding: 1rem;
    gap: 1rem;
    position: relative;
    background: red;
  }
</style>

<script>
  const anchors = document.querySelectorAll("a");
  const isTouchDevice = "ontouchstart" in window;

  const initBarba = async () => {
    const [{ default: barba }, { default: gsap }] = await Promise.all([
      import("@barba/core"),
      import("gsap"),
    ]);

    barba.init({
      transitions: [
        {
          name: "opacity-transition",
          leave: (data) => {
            gsap.to(data.current.container, {
              opacity: 0,
            });
          },
          enter: (data) => {
            gsap.from(data.next.container, {
              opacity: 0,
            });
          },
        },
      ],
    });
  };

  const initBarbaOnFirstInteraction = async () => {
    initBarba();

    anchors.forEach((anchor) => {
      anchor.removeEventListener("mouseenter", initBarbaOnFirstInteraction);
    });
  };

  if (isTouchDevice) {
    // TODO: Check if there's a better way to lazy load barbajs and gsap on touch devices
    await initBarba();
  } else {
    anchors.forEach((anchor) => {
      anchor.addEventListener("mouseenter", initBarbaOnFirstInteraction, {
        once: true,
      });
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body data-barba="wrapper">
    <header>
      <nav>
        <a href="/typography/major-third">Major Third</a>

        <a href="/typography/golden-ratio">Golden Ratio</a>
      </nav>
    </header>

    <main
      data-barba="container"
      data-barba-namespace="home"
      class={fontScaleClass}>
      <slot />
    </main>
  </body>
</html>

---
const { class: className, as, ...props } = Astro.props;

type Props = {
  as?: "section" | "div";
  class?: string;
};

const Element = as ?? "section";
---

<style>
  .grid {
    --page-grid-column-count: 4;

    display: grid;
    grid-template-columns: repeat(var(--page-grid-column-count), 1fr);
    gap: 1rem;
  }

  @container (min-width: 768px) {
    .grid {
      --page-grid-column-count: 8;
    }
  }

  @container (min-width: 1200px) {
    .grid {
      --page-grid-column-count: 12;
    }
  }
</style>

<Element class:list={["grid", className]} {...props}>
  <slot />
</Element>
